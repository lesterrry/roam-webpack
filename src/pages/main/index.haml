        %a.bottom-link профессии

    %section#cities
      %div
        %a.globe.large{ href: '/destinations/yerevan', style: "background-image: url('/img/globe.png')" }
          %p Ереван
        %a.globe.large{ href: '/destinations/adler', style: "background-image: url('/img/sochi.png')" }
          %p Адлер
        %a.globe.large{ href: '/destinations/yerevan', style: "background-image: url('/img/almaty.png')" }
          %p Тбилиси
        %a.globe.large{ href: '/destinations/yerevan', style: "background-image: url('/img/ekb.png')" }
          %p Баку
        %a.globe.large{ href: '/destinations/yerevan', style: "background-image: url('/img/kazan.png')" }
          %p Белград

    %section.small
      %div
        %a.bottom-link направления

    %section#email
      %div
        %p Оставайтесь на связи:
        %div
          %input.pill.border.small.black{type: 'text', placeholder: 'e-mail'}
          %p.pill.border.small подписаться на рассылку

    %footer
      %div
        %a{href: '/about'} о нас
        %a{href: '/destinations'} направления
        %a{href: '/work'} работа
        %a{href: '/materials'} материалы
      %img{src: "/img/logo.svg"}
      %div
        %a{href: '/tg'} telegram
        %a{href: '/inst'} instagram
